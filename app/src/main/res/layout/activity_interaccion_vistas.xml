<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InteraccionVistasActivity">

    <EditText
        android:id="@+id/edit_text_guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Texto a guardar"/>

    <Button
        android:id="@+id/button_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARDAR"/>

    <TextView
        android:id="@+id/text_view_guardado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aqui se mostrara el nuevo texto"
        android:layout_margin="20dp"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/button_cambiar_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAMBIAR ACTIVITY"/>

</LinearLayout>